{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "demo.py",
            "console": "integratedTerminal",
            "env": {
                "PATH": "${env:PATH}",
                "PYTHONPATH": "${workspaceFolder}",
                "PYTHON_ALIAS": "uv run python"
            },
            "justMyCode": true,
            "preLaunchTask": "setPythonAlias" // Optional: See explanation below
        }
    ]
}
